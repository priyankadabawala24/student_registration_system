<div id="login">
  <h2>Student Registration</h2>
  <div class="panel">
    <div class="panel_contents">
      <div id="login_form">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { multipart: true }) do |f| %>
          <%= devise_error_messages! %>
          <fieldset class="inputs">

            <div class="field">
              <%= f.label :name %><br>
              <%= f.text_field :name, class: "input" %>
            </div>

            <div class="field">
              <%= f.label :dob, "Date of Birth" %><br>
              <%= f.date_select :dob, class: "input" %>
            </div>

            <div class="field">
              <%= f.label :photo %><br>
              <%= f.file_field :photo, class: "input" %>
            </div>

            <div class="field">
              <%= f.label :address %><br>
              <%= f.text_area :address, class: "input" %>
            </div>

            <div class="field">
              <%= f.label :email %><br>
              <%= f.email_field :email, class: "input" %>
            </div>

            <div class="field">
              <%= f.label :password %><br>
              <%= f.password_field :password, class: "input" %>
            </div>

            <div class="field">
              <%= f.label :password_confirmation %><br>
              <%= f.password_field :password_confirmation, class: "input" %>
            </div>
          </fieldset>
          <fieldset class="actions">
            <div class="actions">
              <%= f.submit "Sign Up" %>
            </div>
          </fieldset>
        <% end %>
      </div>
    </div>
  </div>
</div>